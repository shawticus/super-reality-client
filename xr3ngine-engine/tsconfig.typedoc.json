{
    "compilerOptions": {
      "experimentalDecorators": true,
      "module": "es2015",
      "declaration": true,
      "noImplicitAny": false,
      "target": "es2015",
      "moduleResolution": "node",
      "sourceMap": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
  
      /* Typedoc Changes */
      "noImplicitThis": false,
      "jsx": "react",
      "skipLibCheck": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "tsconfig.json"]
  }